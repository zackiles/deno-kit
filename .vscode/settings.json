{
  "deno.enable": true,
  "deno.config": "./deno.jsonc",
  "deno.importMap": "./deno.jsonc",
  "deno.disablePaths": ["templates/**/*.ts"],
  "deno.unstable": [
    "kv",
    "net",
    "http",
    "fs",
    "ffi",
    "cron",
    "temporal",
    "webgpu",
    "unsafe-proto",
    "webgpu"
  ],
  "deno.codeLens.implementations": true,
  "deno.codeLens.references": true,
  "deno.codeLens.referencesAllFunctions": true,
  "deno.codeLens.test": true,
  "deno.internalDebug": true,
  "deno.internalInspect": false,
  "deno.maxTsServerMemory": 6000,
  "deno.testing.args": ["--allow-all"],
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "editor.detectIndentation": false,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "workbench.editorAssociations": {
    "*.mdc": "default",
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.md": "vscode.markdown.preview.editor"
  },
  "files.associations": {
    "repomix.config.json": "json5"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown][typescript][javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "search.exclude": {
    "**/.cursor": true
  },
  "cSpell.dictionaries": [
    "!typescript"
  ],
  "json.validate.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["deno.jsonc", "deno.json"],
      "url": "https://raw.githubusercontent.com/denoland/deno/main/cli/schemas/config-file.v1.json"
    }
  ],
  "cSpell.words": [
    "agentic",
    "anthropics",
    "arrowleft",
    "arrowright",
    "asynciterable",
    "beforeunload",
    "cursorignore",
    "cursorignoreindex",
    "dbus",
    "dconf",
    "deno",
    "denoland",
    "deployctl",
    "dockerenv",
    "dotenv",
    "fseventsd",
    "hiberfil",
    "hostnames",
    "hypermix",
    "Iles",
    "iterm",
    "keyrings",
    "MILLIS",
    "modelcontextprotocol",
    "msgpack",
    "msvc",
    "noninteractive",
    "onclose",
    "parentbased",
    "pids",
    "Repomix",
    "repomixing",
    "rwxr",
    "rxvt",
    "scaffolder",
    "scrollback",
    "SIXEL",
    "somevalue",
    "swapfile",
    "testdata",
    "testuser",
    "tftpboot",
    "traceparent",
    "tracestate",
    "typeof",
    "unvalidated",
    "urxvt",
    "USERPROFILE",
    "webgpu",
    "zacharyiles",
    "zackiles",
    "Zipkin"
  ],
}
