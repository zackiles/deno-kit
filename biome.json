{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "lineWidth": 80,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": [
      "tests/**"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "noUselessElse": "off"
      }
    }
  }
}
